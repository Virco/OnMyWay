<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_rounded_button"
    android:layout_marginBottom="10dp" >

    <ImageView
        android:id="@+id/add_friends_dialog_item_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:src="@drawable/profile_pic" />

    <TextView
        android:id="@+id/add_friends_dialog_item_textview_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/add_friends_dialog_item_pic"
        android:layout_alignTop="@+id/add_friends_dialog_item_pic"
        android:layout_toLeftOf="@+id/add_friends_dialog_item_checkbox"
        android:layout_toRightOf="@+id/add_friends_dialog_item_pic"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <CheckBox
        android:id="@+id/add_friends_dialog_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/add_friends_dialog_item_textview_name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/add_friends_dialog_item_textview_name"
        android:layout_margin="10dp" />

</RelativeLayout>